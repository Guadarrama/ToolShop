@model Product
@{
    ViewData["Title"] = "Edit";
}

<form action="/editProduct/@ViewBag.ProductToDisplay.ProductId" method="post">
    <div class="form-group">
        <label>Product Name: </label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" value="@ViewBag.ProductToDisplay.Name">
    </div>
    <div class="form-group">
        <label>Product Description</label>
        <span asp-validation-for="Description" class="text-danger"></span>
        <input asp-for="Description" class="form-control" value="@ViewBag.ProductToDisplay.Description">
    </div>
    <div class="form-group">
        
        <label>Price: </label>
        <span asp-validation-for="Price" class="text-danger"></span>
        <div>
            <input asp-for="Price" class="form-control pl-4" type="number" placeholder="00.00" value="@ViewBag.ProductToDisplay.Price">
            <span class="price-relative">$</span>
        </div>
        
    </div>
    <div class="form-group">
        <label>Quantity: </label>
        <span asp-validation-for="Quantity" class="text-danger"></span>
        <input asp-for="Quantity" class="form-control" value="@ViewBag.ProductToDisplay.Quantity">
    </div>
    <a asp-controller="Home" asp-action="MyProfile" class="btn btn-danger">Cancel</a>
    <input type="submit" class="btn btn-primary" value=". .  Edit Inventory Item">
</form>
<style>
    .price-relative{
    position: relative;
    right: -10px;
    bottom: 30px;
    }
</style>