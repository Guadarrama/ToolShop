@model Product
@{
    ViewData["Title"] = "Add Product";
}

<h3 class="text-center">Add Products to Sell</h3>

<form action="/newProduct" method="post">
    <div class="form-group">
        <label>Product Name: </label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <label>Product Description</label>
        <span asp-validation-for="Description" class="text-danger"></span>
        <input asp-for="Description" class="form-control">
    </div>
    <div class="form-group">
        
        <label>Price: </label>
        <span asp-validation-for="Price" class="text-danger"></span>
        <div>
            <input asp-for="Price" class="form-control pl-4" type="number" placeholder="00.00">
            <span class="price-relative">$</span>
        </div>
        
    </div>
    <div class="form-group">
        <label>Quantity: </label>
        <span asp-validation-for="Quantity" class="text-danger"></span>
        <input asp-for="Quantity" class="form-control">
    </div>
    <input type="submit" class="btn btn-primary" value="Add to Inventory">
</form>

<style>
    .price-relative{
    position: relative;
    right: -10px;
    bottom: 30px;
    }
</style>